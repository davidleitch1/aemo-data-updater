# AEMO Data Updater Configuration
# Copy this file to .env and update with your settings

# Data storage path (where parquet files are stored)
AEMO_DATA_PATH=/Users/davidleitch/Library/Mobile Documents/com~apple~CloudDocs/snakeplay/AEMO_spot

# Update interval in minutes (default: 4.5)
UPDATE_INTERVAL_MINUTES=4.5

# Status UI settings
STATUS_UI_PORT=5011
STATUS_UI_HOST=localhost

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Email alerts (optional)
ENABLE_EMAIL_ALERTS=false
ALERT_EMAIL=your-email@example.com
ALERT_PASSWORD=your-app-specific-password
RECIPIENT_EMAIL=alerts@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# SMS alerts via Twilio (optional) - Compatible with existing price alerts
ENABLE_SMS_ALERTS=false
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
MY_PHONE_NUMBER=+1987654321