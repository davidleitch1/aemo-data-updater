# Example environment file for AEMO Data Updater
# Copy this file to .env and fill in your credentials

# Update interval (minutes)
UPDATE_INTERVAL_MINUTES=4.5

# Log level
LOG_LEVEL=INFO

# SMS alerts via Twilio (optional)
ENABLE_SMS_ALERTS=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number
MY_PHONE_NUMBER=+61412345678     # Your mobile number for alerts

# Email alerts (optional)
ENABLE_EMAIL_ALERTS=false
ALERT_EMAIL=your_email@example.com
ALERT_PASSWORD=your_app_specific_password
RECIPIENT_EMAIL=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Price alert thresholds ($/MWh)
PRICE_ALERT_HIGH=1000
PRICE_ALERT_EXTREME=10000
PRICE_ALERT_RECOVERY=300
EOF < /dev/null